{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GõKey",
  "version": "0.2.9",
  "identifier": "com.goxkey.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GõKey",
        "width": 960,
        "height": 720,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "../icons/icon.icns",
      "../icons/icon.png"
    ]
  }
}
